{
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "files.insertFinalNewline": true,
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "cSpell.words": [
        "arithmatex",
        "árvíztűrő",
        "backref",
        "blockquote",
        "eazy",
        "elif",
        "enduml",
        "errorlevel",
        "filestem",
        "fnref",
        "Hunyadi",
        "IHDR",
        "iterchildren",
        "levelname",
        "Levente",
        "leventehunyadi",
        "localname",
        "magiclink",
        "Matplotlib",
        "mdignore",
        "mdpath",
        "mmdc",
        "mxfile",
        "mypy",
        "nbsp",
        "pymdownx",
        "scandir",
        "setuptools",
        "startuml",
        "superfences",
        "tasklist",
        "tasklists",
        "Truststore",
        "tükörfúrógép",
        "viewbox",
        "viewpage",
        "webui"
    ]
}
